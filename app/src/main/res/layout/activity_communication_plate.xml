                    android:text="걸어가요"
                    android:textAlignment="center"
                    android:textColor="#000000"></TextView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_11"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
