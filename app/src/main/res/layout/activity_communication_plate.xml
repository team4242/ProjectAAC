<?xml version="1.0" encoding="utf-8"?>

<!--
    communication plate 의사소통판
    밑의 상징은 나중에 분리하여 관리할 예정
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7ACEF4"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".CommunicationPlate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_a"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_weight="1" />


                <TextView
                    android:id="@+id/texta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_b"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/textb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_c"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"></TextView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_d"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#7ACEF4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_number"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#03A9F4"
            android:text="숫자" />

        <Button
            android:id="@+id/btn_favorite"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:background="#03A9F4"
            android:text="즐겨찾기" />

        <Button
            android:id="@+id/btn_recommend"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#03A9F4"
            android:text="추천보드" />
    </LinearLayout>

    <GridLayout

